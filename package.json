{
  "name": "b.0218.jp",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8080",
    "prebuild": "git submodule update --remote && npm run build:article && npm run build:similarity && npm run build:popular && npm run build:feed",
    "build": "next build",
    "postbuild": "npm run build:sitemap && npm run build:ogp",
    "build:article": "node --require esbuild-register ./src/build/article",
    "build:feed": "node --require esbuild-register ./src/build/feed.ts",
    "build:ogp": "node --require esbuild-register ./src/build/ogp && node --require esbuild-register ./src/build/ogp/convertPngToWebP.ts",
    "build:sitemap": "node --require esbuild-register node_modules/next-sitemap/bin/next-sitemap",
    "build:similarity": "node --require esbuild-register ./src/build/similarity",
    "build:popular": "node --require esbuild-register ./src/build/popular",
    "build:analyzer": "ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint \"src/**/*{.js,.ts,.tsx}\"",
    "lint:markup": "markuplint \"src/**/*{.jsx,.tsx}\"",
    "test": "jest --forceExit --coverage",
    "prepare": "husky install && playwright install chromium"
  },
  "nano-staged": {
    "**/*.{ts,tsx,js}": [
      "eslint --fix --cache",
      "eslint --cache",
      "prettier --write --cache",
      "bash -c 'tsc --noEmit --skipLibCheck'"
    ],
    "**/*.{css,tsx}": [
      "stylelint --fix --cache",
      "stylelint --cache",
      "prettier --write --cache"
    ]
  },
  "browserslist": [
    "last 2 versions and >= 1% in JP and not dead, last 2 Firefox versions"
  ],
