{
  "name": "b.0218.jp",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8080 --experimental-https",
    "prebuild": "git submodule update --remote && npm run build:article && npm run build:similarity && npm run build:popular && npm run build:ogp",
    "build": "TZ='Asia/Tokyo' next build",
    "postbuild": "npm run build:feed && npm run build:sitemap",
    "build:article": "node --require esbuild-register ./src/build/article",
    "build:feed": "node --require esbuild-register ./src/build/feed.ts",
    "prebuild:ogp": "nohup node --require esbuild-register ./src/build/ogp/http.ts  > /dev/null 2>&1 &",
    "build:ogp": "node --require esbuild-register ./src/build/ogp",
    "postbuild:ogp": "ps ax | grep 'http.ts' | grep -v grep | awk '{print $1}' | xargs kill",
    "build:sitemap": "node --require esbuild-register node_modules/next-sitemap/bin/next-sitemap",
    "build:similarity": "node --require esbuild-register ./src/build/similarity",
    "build:popular": "node --require esbuild-register ./src/build/popular",
    "build:analyzer": "ANALYZE=true next build",
    "start": "next start",
    "lint": "npx @biomejs/biome lint src/**/*.{js,ts,tsx}",
    "lint:css": "stylelint \"src/**/*.{css,tsx}\"",
    "lint:markup": "markuplint \"src/**/*.{jsx,tsx}\"",
    "test": "jest --forceExit --coverage",
    "nolyfill": "npx nolyfill install",
    "prepare": "husky && playwright install"
  },
  "nano-staged": {
    "**/*.{ts,tsx,js}": [
      "npx @biomejs/biome lint --write",
      "bash -c 'tsc --noEmit --skipLibCheck'"
    ],
    "**/*.{css,tsx}": [
      "npx @biomejs/biome lint --write",
      "stylelint --fix --cache"
    ],
    "**/*.{yml,yaml}": [
      "prettier --write --cache"
    ]
  },
  "browserslist": [
    "last 2 versions and >= 1% in JP and not dead, last 2 Firefox versions"
  ],
  "dependencies": {
    "@emotion/cache": "11.13.1",
    "@emotion/react": "11.13.3",
    "@emotion/server": "11.11.0",
    "@emotion/styled": "11.13.0",
    "@radix-ui/colors": "3.0.0",
    "@radix-ui/react-icons": "1.3.0",
    "css-in-js-easing": "1.2.0",
    "fast-json-stable-stringify": "2.1.0",
    "lightningcss": "1.27.0",
    "mokuji.js": "4.5.1",
    "next": "14.2.11",
    "nextjs-google-analytics": "2.3.7",
    "postcss": "8.4.47",
    "postcss-combine-duplicated-selectors": "10.0.3",
    "postcss-lightningcss": "1.0.1",
    "postcss-sort-media-queries": "5.2.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "shokika.css": "1.7.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.0",
    "@google-analytics/data": "4.7.0",
    "@hono/node-server": "1.13.0",
    "@markuplint/jsx-parser": "4.7.6",
    "@markuplint/react-spec": "4.5.6",
    "@next/bundle-analyzer": "14.2.11",
    "@svgr/webpack": "8.1.0",
    "@total-typescript/ts-reset": "0.6.0",
    "@types/gtag.js": "0.0.20",
    "@types/hast": "3.0.4",
    "@types/jest": "29.5.13",
    "@types/jsdom": "21.1.7",
    "@types/node": "22.5.5",
    "@types/react": "18.3.5",
    "@types/react-dom": "18.3.0",
    "@types/twitter-for-web": "0.0.6",
    "browserslist": "4.23.3",
    "dependency-cruiser": "16.4.1",
    "dotenv": "16.4.5",
    "esbuild": "0.23.1",
    "esbuild-register": "3.6.0",
    "fdir": "6.3.0",
    "feed": "4.2.2",
    "gray-matter": "4.0.3",
    "hast-util-is-element": "3.0.0",
    "hast-util-parse-selector": "4.0.0",
    "hast-util-select": "6.0.2",
    "hastscript": "9.0.0",
    "hono": "4.6.1",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "jsdom": "25.0.0",
    "markuplint": "4.9.3",
    "mdast-util-find-and-replace": "3.0.1",
    "nano-staged": "0.8.0",
    "next-build-id": "3.0.0",
    "next-compose-plugins": "2.2.1",
    "next-sitemap": "4.2.3",
    "picocolors": "1.1.0",
    "playwright": "1.43.1",
    "postcss-media-hover-any-hover": "0.2.1",
    "postcss-styled-syntax": "0.6.4",
    "prettier": "3.3.3",
    "reading-time": "1.5.0",
    "rehype-external-links": "3.0.0",
    "rehype-highlight": "7.0.0",
    "rehype-preset-minify": "7.0.0",
    "rehype-raw": "7.0.0",
    "rehype-stringify": "10.0.0",
    "remark-gfm": "4.0.0",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.0",
    "schema-dts": "1.1.2",
    "stylelint": "16.9.0",
    "stylelint-browser-compat": "1.0.0-beta.133",
    "stylelint-config-recess-order": "5.1.0",
    "stylelint-config-recommended": "14.0.1",
    "stylelint-declaration-block-no-ignored-properties": "2.8.0",
    "typescript": "5.6.2",
    "unified": "11.0.5",
    "unist-util-visit": "5.0.0"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "singleQuote": true,
    "semi": true
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 0,
    "showDetails": true
  },
  "overrides": {
    "array.prototype.at": "npm:@nolyfill/array.prototype.at@^1",
    "is-core-module": "npm:@nolyfill/is-core-module@^1",
    "isarray": "npm:@nolyfill/isarray@^1",
    "object-keys": "npm:@nolyfill/object-keys@^1",
    "string.prototype.at": "npm:@nolyfill/string.prototype.at@^1"
  }
}
