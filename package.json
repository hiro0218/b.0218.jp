{
  "name": "b.0218.jp",
  "version": "3.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev -p 8080 --experimental-https",
    "prebuild": "git submodule update --remote && npm run build:article && npm run build:similarity && npm run build:popular && npm run build:ogp",
    "build": "TZ='Asia/Tokyo' next build",
    "build:article": "TZ='Asia/Tokyo' NODE_OPTIONS='--disable-warning=ExperimentalWarning' node --require esbuild-register ./build/article",
    "build:misc": "node -r esbuild-register ./build/article/extractUniqueChars.ts",
    "prebuild:ogp": "nohup node --require esbuild-register ./build/ogp/server.tsx  > /dev/null 2>&1 &",
    "build:ogp": "node --require esbuild-register ./build/ogp/screenshot.ts",
    "postbuild:ogp": "ps ax | grep 'server.ts' | grep -v grep | awk '{print $1}' | xargs kill",
    "build:similarity": "node --require esbuild-register ./build/similarity",
    "build:popular": "node --require esbuild-register ./build/popular",
    "build:analyzer": "ANALYZE=true next build",
    "start": "next start",
    "lint": "npx @biomejs/biome lint src/**/*.{ts,tsx}",
    "lint:css": "stylelint \"src/**/*.{css,ts,tsx}\"",
    "lint:markup": "markuplint \"src/**/*.{jsx,tsx}\"",
    "test": "vitest --run",
    "coverage": "vitest run --coverage",
    "nolyfill": "npx nolyfill install",
    "prepare": "husky && playwright install --only-shell && panda codegen"
  },
