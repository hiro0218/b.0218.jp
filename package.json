  "overrides": {
    "next-scroll-restorer": {
      "next": "$next"
    },
    "array.prototype.at": "npm:@nolyfill/array.prototype.at@^1",
    "is-core-module": "npm:@nolyfill/is-core-module@^1",
    "string.prototype.at": "npm:@nolyfill/string.prototype.at@^1",
    "safe-buffer": "npm:@nolyfill/safe-buffer@^1",
    "safer-buffer": "npm:@nolyfill/safer-buffer@^1",
    "es-set-tostringtag": "npm:@nolyfill/es-set-tostringtag@^1"
  },
  "nano-staged": {
    "**/*.{ts,tsx,js}": [
      "npx @biomejs/biome check --write",
      "bash -c 'tsc --noEmit --skipLibCheck'"
    ],
    "**/*.{ts,tsx}": [
      "npx @biomejs/biome check --write",
      "stylelint --fix --cache"
    ],
    "**/*.css": [
      "prettier --write --cache --experimental-cli",
      "stylelint --fix --cache"
    ],
    "**/*.{yml,yaml}": [
      "prettier --write --cache --experimental-cli"
    ]
  },
  "browserslist": [
    "last 2 versions and >= 1% in JP and not dead, last 2 Firefox versions"
  ],
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "singleQuote": true,
    "semi": true,
    "plugins": [
      "@prettier/plugin-oxc"
    ]
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 0,
    "showDetails": true
  }
}
